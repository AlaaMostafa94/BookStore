@model IEnumerable<BookShop.DAL.Classification>

@{
    //ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<br>
<h2 class="text-dark">Classifications</h2>

<br>

<div class="body-content">
    @if (Model.Count() == 0)
    {
        <div class="bg-gray d-flex justify-content-center empty-content">No Classifications Found .</div>
    }
    else
    {

            <ul>
                @foreach (var item in Model)
                {
                <li>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <a href="/Classification/GetOne/@item.ID">@Html.DisplayFor(modelItem => item.Name)</a> 

                    </div>
                </li>
   





                }
            </ul>



    }
    <br /><br />
</div>
